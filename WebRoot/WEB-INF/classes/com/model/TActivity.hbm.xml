<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.model.TActivity" table="t_activity">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="kaishisj" type="java.lang.String">
            <column name="kaishisj" length="20" />
        </property>
        <property name="jieshusj" type="java.lang.String">
            <column name="jieshusj" length="20" />
        </property>
        <property name="zhuti" type="java.lang.String">
            <column name="zhuti" length="100" />
        </property>
        <property name="jieshao" type="java.lang.String">
            <column name="jieshao" length="255" />
        </property>
        <property name="jiangli" type="java.lang.String">
            <column name="jiangli" length="255" />
        </property>
    </class>
</hibernate-mapping>